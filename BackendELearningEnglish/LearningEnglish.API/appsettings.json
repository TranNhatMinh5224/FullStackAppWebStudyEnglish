{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "LearningEnglish.API.Middleware.RlsMiddleware": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Frontend": {
    "BaseUrl": "http://localhost:3000" 
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=YourDatabase;Username=postgres;Password=YourPassword"
  },
  "Jwt": {
    "Key": "YourSecretKeyHere-MinimumLength32Characters",
    "Issuer": "ELearningEnglish",
    "Audience": "ELearningEnglishAudience"
  },
  "Smtp": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "User": "your-email@gmail.com",
    "Password": "your-app-password",
    "EnableSsl": true,
    "FromName": "E-Learning English Platform"
  },
  "Security": {
    "PasswordResetTokenExpiryHours": 1,
    "MaxPasswordResetAttempts": 5,
    "PasswordResetCooldownMinutes": 15
  },

  "AzureSpeech": {
    "SubscriptionKey": "your-azure-speech-key-here",
    "Region": "your-azure-region-here"
  },
  "MinIO": {
    "Endpoint": "your-minio-endpoint.com",
    "AccessKey": "your-access-key",
    "SecretKey": "your-secret-key",
    "UseSSL": true
  },
  "Minio": {
    "BaseUrl": "https://your-minio-console.com"
  },
  "OxfordDictionary": {
    "BaseUrl": "https://od-api-sandbox.oxforddictionaries.com/api/v2",
    "AppId": "your-oxford-app-id",
    "AppKey": "your-oxford-app-key"
  },
  "Unsplash": {
    "ApplicationId": "your-unsplash-app-id",
    "AccessKey": "your-unsplash-access-key",
    "SecretKey": "your-unsplash-secret-key",
    "BaseUrl": "https://api.unsplash.com"
  },
  "GoogleAuth": {
    "ClientId": "XXXX",
    "ClientSecret": "XXXX",
    "RedirectUri": "http://localhost:3000/auth/google/callback"
  },
  "FacebookAuth": {
    "AppId": "xxxxxx",
    "AppSecret": "xxxxxxx",
    "RedirectUri": "http://localhost:3000/auth/facebook/callback"
  },
  "PayOS": {
    "ClientId": "",
    "ApiKey": "",
    "ChecksumKey": "",
    "ApiUrl": "https://api-merchant.payos.vn",
    "ReturnUrl": "http://localhost:5030/api/user/payments/payos/return",
    "CancelUrl": "http://localhost:5030/api/user/payments/payos/return",
    "WebhookUrl": "https://sherrell-unlacquered-kina.ngrok-free.dev/api/user/payments/payos/webhook"
  }
}